<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="indicatorColor" format="color" />
        <attr name="underlineColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="underlineHeight" format="dimension" />
        <attr name="dividerPaddinga" format="dimension" />
        <attr name="tabPaddingLeftRight" format="dimension" />
        <attr name="scrollOffset" format="dimension" />
        <attr name="tabBackground" format="reference" />
        <attr name="shouldExpand" format="boolean" />
        <attr name="textAllCapsa" format="boolean" />
    </declare-styleable>
    
    <!-- circule progress attrs -->
    <declare-styleable name="CircularProgress">
        <attr name="circular_progress_color" format="color"/>
        <attr name="circular_progress_size" format="enum">
            <enum name="Small" value="0"/>
            <enum name="Normal" value="1"/>
            <enum name="Large" value="2"/>
        </attr>
        <attr name="circular_progress_border_width" format="dimension"/>
        <attr name="circular_progress_indeterminate" format="boolean"/>
        <attr name="circular_progress_max" format="integer"/>
        <attr name="circular_progress_duration" format="integer"/>
    </declare-styleable>
    
     <declare-styleable name="CircleLayout">
        <!--开始角度-->
        <attr name="startAngle" format="integer" />
        <!--结束角度-->
        <attr name="endAngle" format="integer" />
        <!--旋转方向-->
        <attr name="rotateDirection">
            <!--顺时针-->
            <enum name="clockwise" value="0" />
            <!--逆时针-->
            <enum name="counterclockwise" value="1" />
        </attr>
        <!--形状-->
        <attr name="pathShape">
            <!--顺时针-->
            <enum name="circle" value="0" />
            <!--逆时针-->
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>

</resources>